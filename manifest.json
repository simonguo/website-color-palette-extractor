{
  "manifest_version": 3,
  "name": "Website Color Palette Extractor",
  "version": "1.0",
  "description": "Extract color palettes from any website with advanced analysis tools",
  "permissions": [
    "activeTab",
    "scripting",
    "sidePanel"
  ],
  "action": {
    "default_title": "Color Palette Extractor"
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}